<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zsy.bmw.dao.HouseMapper">

    <resultMap id="BaseResultMap" type="House">
        <id column="house_id" property="houseId" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="creator_name" property="creatorName" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="price" property="price" jdbcType="INTEGER"/>
        <result column="city_id" property="cityId" jdbcType="INTEGER"/>
        <result column="region_id" property="regionId" jdbcType="INTEGER"/>
        <result column="position" property="position" jdbcType="VARCHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
        <result column="area" property="area" jdbcType="INTEGER"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="contact" property="contact" jdbcType="VARCHAR"/>
        <result column="des" property="des" jdbcType="VARCHAR"/>
        <result column="region_tag" property="regionTag" jdbcType="INTEGER"/>
        <result column="type_tag" property="typeTag" jdbcType="INTEGER"/>
        <result column="dec_tag" property="decTag" jdbcType="INTEGER"/>
        <result column="route_tag" property="routeTag" jdbcType="INTEGER"/>
        <result column="station_tag" property="stationTag" jdbcType="INTEGER"/>
    </resultMap>


    <select id="getTopHouses" resultMap="BaseResultMap">
        select
        house_id, name
        from house
        order by house_id desc
    </select>


    <select id="getHeadImg" parameterType="java.lang.Integer" resultType="java.lang.String">
        select
        img
        from house_imgs
        where house_id = #{houseId}
        limit 1
    </select>

    <select id="getHouseById" resultMap="BaseResultMap">
        SELECT *
        from house
        where house_id = #{houseId}
        limit 1
    </select>

    <select id="getHouseBriefById" resultMap="BaseResultMap">
        SELECT house_id, name, price, position, area, des
        from house
        where house_id = #{houseId}
        limit 1
    </select>

    <select id="getHouseImgs" resultType="java.lang.String">
        SELECT img
        from house_imgs
        where house_id = #{houseId}
    </select>

    <select id="getHouseTagIds" resultType="java.lang.Integer">
        SELECT tag_id
        from house_tags
        where house_id = #{houseId}
    </select>

    <select id="getTagNames" resultType="java.lang.String">
        SELECT name
        from tag
        where tag_id IN
        <foreach item="id" collection="tagIds" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="getHouseIdsByCondition" parameterType="HouseCondition" resultMap="BaseResultMap">
        SELECT house_id, name, price, position, area, des
        FROM house where 1=1
        <if test="price != null">
            and price &lt;= #{maxPrice} and price &gt;= #{minPrice}
        </if>
        <if test="area != null">
            and area &lt;= #{maxArea} and area &gt;= #{minArea}
        </if>
        <if test="region != null">
            and region_tag = #{region}
        </if>
        <if test="type != null">
            and type_tag = #{type}
        </if>
        <if test="dec != null">
            and dec_tag = #{dec}
        </if>
        <if test="route != null">
            and route_tag = #{route}
        </if>
        <if test="station != null">
            and station_tag = #{station}
        </if>
    </select>

    <select id="getTagName" parameterType="java.lang.Integer" resultType="java.lang.String">
        SELECT name
        FROM tag
        WHERE tag_id = #{id}
    </select>

    <insert id="insertHouse" parameterType="House" useGeneratedKeys="true" keyProperty="houseId">
        INSERT INTO
        house(name, creator_name, price, city_id,
        position, area, phone, contact, des,
        region_tag, type_tag, dec_tag, route_tag, station_tag)
        VALUES (#{name}, #{creatorName}, #{price}, #{cityId},
        #{position}, #{area}, #{phone}, #{contact}, #{des},
        #{regionTag}, #{typeTag}, #{decTag}, #{routeTag}, #{stationTag})
    </insert>

    <insert id="insertHouseImg">
        INSERT INTO
        house_imgs(house_id, img)
        VALUES(#{houseId}, #{imgUrl})
    </insert>

    <insert id="insertHouseTag">
        INSERT INTO
        house_tags(house_id, tag_id)
        VALUES(#{houseId}, #{tagId})
    </insert>


</mapper>